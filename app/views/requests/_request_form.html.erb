<% unless current_user.sending?(user) %>
  <%= form_for(current_user.requests.build(recipient_id: user.id), remote: true, class: 'follow-form-area') do |f| %>
    <%= f.hidden_field :recipient_id %>
    <%= f.submit "フォローする", class: "follow-btn" %>
  <% end %>
<% else %>
  <%= form_for(current_user.requests.find_by(recipient_id: user.id), html: { method: :delete }, remote: true, class: 'follow-form-area') do |f| %>
    <%= f.submit "リクエストを送信しました", class: "unsend-request-btn" %>
  <% end %>
<% end %>
