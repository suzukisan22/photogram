<!DOCTYPE html>
<html>
<head>
  <title>Photogram</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <header>
      <nav class="navbar navbar-default">
        <div class="container-fluid">
          <div class="col-md-8 col-md-offset-2 col-sm-10 col-sm-offset-1">
            <!-- Brand and toggle get grouped for better mobile display -->
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
              <span class="sr-only">Toggle navigation</span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
            </button>
            <%= link_to root_path, id: "top_icon", class: "pull-left row to-home" do %>
              <%= fa_icon "camera-retro", id: "top_camera", class: "fa-2x col-sm-3 col-xs-6 text-right" %>
              <h3 class="col-sm-9 col-xs-6 text-left">Photogram</h3>
            <% end %>
            <%= form_tag(search_path, method: "get", class: 'search-area') do %>
              <%= text_field_tag 'q', '', placeholder: '検索' %>
            <% end %>
            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
              <ul class="nav navbar-nav navbar-right">
                <% if user_signed_in? %>
                <li class="dropdown">
                  <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">メニュー<span class="caret"></span></a>
                  <ul class="dropdown-menu">
                    <li><%= link_to '写真を投稿する', new_picture_path %></li>
                    <li><%= link_to 'ユーザー一覧', user_index_path %></li>
                    <li><%= link_to 'メッセージ一覧', conversations_path(username: current_user.username)  %></li>
                  </ul>
                </li>
                  <li>
                    <%= link_to user_profile_path(current_user.username), alt: 'プロフィール編集' do %>
                      <%= fa_icon "user", class: "fa-2x" %>
                    <% end %>
                  </li>
                  <li><%= link_to 'ログアウト', destroy_user_session_path, method: :delete %></li>
                <% else %>
                  <li><%= link_to 'ログイン', new_user_session_path %></li>
                  <li><%= link_to 'サインアップ', new_user_registration_path %></li>
                <% end %>
              </ul>
            </div>
          </div>
        </div><!-- /.navbar-collapse -->
     </div><!-- /.container-fluid -->
   </nav>
 </header>
<div class="margin-adjust">
  <div class="container">
        <%= yield %>
    </div>
  </div>
</div>
<footer>
</footer>
</body>
</html>
