<!DOCTYPE html>
<html>
<head>
  <title>Photogram</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<div class="wrapper">
<header>
  <div class="container">
    <div class="clearfix">
      <%= link_to root_path, id: "top_icon", class: "pull-left row" do %>
        <%= fa_icon "camera-retro", id: "top_camera", class: "fa-2x col-xs-6 text-right" %>
        <h3 class="col-xs-6 text-left">Photogram</h3>
      <% end %>
      <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      <ul class="nav navbar-nav navbar-right">
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Menu<span class="caret"></span></a>
          <ul class="dropdown-menu">
            <li><%= link_to '写真を投稿する', new_picture_path %></li>
          </ul>
        </li>
        <% if user_signed_in? %>
          <li>
            <%= link_to edit_user_registration_path do %>
              <%= fa_icon "user", class: "fa-2x" %>
            <% end %>
          </li>
          <li><%= link_to 'ログアウト', destroy_user_session_path, method: :delete %></li>
        <% else %>
          <li><%= link_to 'ログイン', new_user_session_path %></li>
          <li><%= link_to 'サインアップ', new_user_registration_path %></li>
        <% end %>
      </ul>
    </div><!-- /.navbar-collapse -->
    </div>
  </div>
</header>
  <%= yield %>
</div>
</body>
</html>
