<div class="col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2 col-xs-10 col-xs-offset-1">
  <div class="row">
    <h1>ユーザー検索</h1>
    <%= form_for(@user, url:result_path) do |f| %>
      <div class="row mb25">
        <div class="col-sm-4">
          <%= f.label :メールアドレス %><br>
          <%= f.search_field :email, class: 'form-control', placeholder: 'メールアドレスを入力' %>
        </div>
        <div class="col-sm-4">
          <%= f.label :名前 %><br>
          <%= f.search_field :name, class: 'form-control', placeholder: '名前を入力' %>
        </div>
        <div class="col-sm-4">
          <%= f.label :ユーザー名 %><br>
          <%= f.search_field :username, class: 'form-control', placeholder: 'ユーザー名を入力' %>
        </div>
      </div>
      <%= f.submit '検索', class: 'btn btn-primary btn-block' %>
    <% end %>
  </div>
</div>
