<div class="col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2 col-xs-10 col-xs-offset-1">
  <div class="row">
    <% @conversations.each do |conv| %>
      <div class="conv-list">
        <span><%= profile_img(conv.target_user(current_user)) %></span>
        <% if conv.target_user(current_user).present? %>
            <%= link_to conv.target_user(current_user).name, conversation_messages_path(conv) %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
