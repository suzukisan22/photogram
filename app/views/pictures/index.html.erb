<p id="notice"><%= notice %></p>
<% @pictures.each do |picture| %>
  <div class="pic-area">
    <div class="pic-user-name">
      <% @users.each do |user| %>
        <% if user.id == picture.user_id %>
          <p><%= user.name %></p>
        <% end %>
      <% end %>
    </div>
    <div class="pic-photo-area">
      <%= image_tag("#{picture.avatar}") %>
    </div>
    <div class="pic-comment-area">
      <%= picture.comment %>
    </div>
    <div class="pic-action-area">
      <%= link_to '編集', edit_picture_path(picture) %>
      <%= link_to '削除', picture, method: :delete, data: { confirm: 'Are you sure?' } %>
    </div>
  </div>
<% end %>
