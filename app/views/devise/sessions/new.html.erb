<div class="col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2 col-xs-10 col-xs-offset-1">
  <div class="row">
    <div class="wrapper">
      <div class="form-title">
        <h2>ログイン</h2>
      </div>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>

        <div class="field">
          <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "メールアドレス" %>
        </div>

        <div class="field">
          <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "パスワード" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :内容を記憶させる %>
          </div>
        <% end %>

        <div class="actions">
          <%= f.submit "ログイン", class: "btn btn-primary btn-block" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>

    <%- if devise_mapping.omniauthable? %>
      <div class="or-area text-center row">
        <div class="col-xs-4　col-xs-offset-4">または</div>
      </div>
      <div class="outh-signin">
        <%- resource_class.omniauth_providers.each do |provider| %>
          <% if OmniAuth::Utils.camelize(provider) == "Twitter" %>
            <%= link_to omniauth_authorize_path(resource_name, provider) , class: "outh-twitter" do %>
              <%= fa_icon "twitter" %>Twitterでログインする
            <% end %>
          <% else %>
            <%= link_to omniauth_authorize_path(resource_name, provider) , class: "outh-facebook" do %>
              <%= fa_icon "facebook-official" %>Facebookでログインする
            <% end -%>
          <% end -%>
        <% end -%>
      </div>
    <% end -%>

    <div class="oth-option">
      <span>アカウントをお持ちでないですか?</span>
      <%= link_to "登録する" , new_registration_path(resource_name) , class: "oth-link" %>
    </div>
  </div>
</div>
