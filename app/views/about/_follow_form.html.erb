<% unless current_user.following?(user) %>
    <%= form_for(current_user.relationships.build(followed_id: user.id), remote: true, class: 'follow-form-area') do |f| %>
      <%= f.hidden_field :followed_id %>
      <%= f.submit "フォローする", class: "follow-btn" %>
    <% end %>
<% else %>
  <%= form_for(current_user.relationships.find_by(followed_id: user.id), html: { method: :delete }, remote: true, class: 'follow-form-area') do |f| %>
    <%= f.submit "フォロー中", class: "unfollow-btn" %>
  <% end %>
<% end %>
