<div class="col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2 col-xs-10 col-xs-offset-1">
  <div class="row">
    <div class="row">
      <div class="col-xs-2 profile-img">
        <h2><%= profile_img(@user) %></h2>
      </div>
      <div class="col-xs-10">
        <h1>
          <%= link_to user_profile_path(@user.username), class: 'a-default' do %>
            <%= @user.name %>
          <% end %>
        </h1>
      </div>
    </div>
    <% if @over_ten %>
      <%= link_to '以前のメッセージ', '?m=all' %>
    <% end %>

    <div id="message-list" class="ui segment">
      <%= render partial: 'message_list', locals: { messages: @messages } %>
    </div>

    <%= form_for [@conversation, @message], html: {class: "ui reply form"} do |f| %>
      <div class="field">
        <%= f.text_field :body, class: "form-control", id: 'input-message', placeholder: 'メッセージをここに記入' %>
      </div>
        <%= f.text_field :user_id, value: current_user.id, type: "hidden"  %>
      <div>

    <% end %>
  </div>
</div>
